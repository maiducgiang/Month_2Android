<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_item_listemail_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#40C0FF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/text_item_listemail_name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_item_listemail_avatar"
            app:layout_constraintBottom_toTopOf="@id/text_item_listemail_des"
            android:textSize="20dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginLeft="10dp"
            android:textColor="#BEFF7A"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_item_listemail_des"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/text_item_listemail_name"
            app:layout_constraintBottom_toTopOf="@id/text_item_listemail_content"
            app:layout_constraintLeft_toRightOf="@id/image_item_listemail_avatar"
            android:textSize="17dp"
            android:layout_marginLeft="10dp"
            android:textColor="#BEFF7A"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_item_listemail_content"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/text_item_listemail_des"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_item_listemail_avatar"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/text_item_listemail_date"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_item_listemail_name"

            android:textSize="12dp"
            android:textColor="#BEFF7A"/>

        <ImageView
            android:id="@+id/imagae_listemail_farvorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/text_item_listemail_content"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/star"
            android:layout_marginBottom="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>